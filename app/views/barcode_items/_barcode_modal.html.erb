<%
  remote ||= true
  url ||= barcode_items_path
%>
<div class="modal fade" id="newBarcode">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add New Barcode</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for BarcodeItem.new, url: url, html: {role: "form"}, remote: remote, wrapper: :vertical_form do |f| %>
          <div class="box-body p-3">
            <div class="row">
              <%= f.input :quantity, label: "Quantity" do %>
                <span class="input-group-text"><i class="fa fa-sort-numeric-desc"></i></span>
                <%= f.input_field :quantity, class: "form-control", autofocus: true %>
              <% end %>
            </div><!-- /.row -->
            <div class="row">
              <%= f.association :barcodeable, collection: @items, label: "Item" %>
            </div>
            <div class="row">
              <%= f.input :value, label: "Barcode" do %>
                <%= f.input_field :value, class: "form-control" %>
                <div id="barcode-scanner-btn" class="fa fa-barcode barcode-scanner input-group-text"></div>
              <% end %>
            </div><!-- /.row -->
          </div>
          <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
            <%= submit_button %>
          </div>
          </div>
          <!-- /.modal-content -->
        <% end %>
        </div>
    <!-- /.modal-dialog -->
  </div>
