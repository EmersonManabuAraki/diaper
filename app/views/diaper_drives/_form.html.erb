<%= simple_form_for @diaper_drive, remote: request.xhr?, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary">
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" id="quickForm">
              <div class="card-body">
                <div class="form-group">
                  <%= f.input :name %>
                </div>
                <div class="form-group">
                  <%= f.input :start_date,
                              label: "Start Date",
                              as: :date,
                              html5: true %>
                </div>
                <div class="form-group">
                  <%= f.input :end_date,
                              label: "End Date",
                              as: :date,
                              html5: true %>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <%= f.button :submit, "Create Diaper Drive", :class => 'diaper-drive-submit btn btn-info', :id => 'diaper_drive_submit' %>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">

        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
<% end %>
